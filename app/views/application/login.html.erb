<h1>Login</h1>
<hr />
<div class="app-form">
<%= form_tag("/login", :controller => "application", :method => "post") do %>
  <%= label_tag(:username, "Username") %>
  <%= text_field_tag(:username) %>
  <%= label_tag(:password, "Password") %>
  <%= password_field_tag(:password) %>
  <div>
  <%= submit_tag("Login", :class => "btn primary") %>
  </div>
<% end %>
</div>